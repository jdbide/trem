<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="2.0">

	<persistence-unit name="PU_socle" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<non-jta-data-source>java:comp/env/jdbc/socle</non-jta-data-source>
		<class>com.avancial.socle.data.model.databean.RefDirectoryDataBean</class>
		<class>com.avancial.socle.data.model.databean.UserDataBean</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<!-- Configuring JDBC properties -->
			<property name="hibernate.connection.datasource" value="java:comp/env/jdbc/socle" />
			<!-- Hibernate properties -->
			<property name="hibernate.id.new_generator_mappings" value="true" />
			<property name="hibernate.archive.autodetection" value="class" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="connection.autocommit" value="false" />
			<property name="hibernate.generate_statistics" value="false" />
			<property name="hibernate.use_sql_comments" value="false" />
			<!-- Configuring Connection Pool -->
		    <property name="hibernate.c3p0.min_size" value="5" />
		    <property name="hibernate.c3p0.max_size" value="20" />
		    <property name="hibernate.c3p0.timeout" value="500" />
		    <property name="hibernate.c3p0.max_statements" value="50" />
		    <property name="hibernate.c3p0.idle_test_period" value="2000" />			
		</properties>
	</persistence-unit>
	
	<persistence-unit name="PU_externe" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:comp/env/jdbc/externe</non-jta-data-source>

		<properties>
			<!-- Configuring JDBC properties -->
			<property name="hibernate.connection.datasource" value="java:comp/env/jdbc/externe" />
			<!-- Hibernate properties -->
			<property name="hibernate.id.new_generator_mappings" value="true" />
			<property name="hibernate.archive.autodetection" value="class" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.DB2Dialect" />
			<property name="connection.autocommit" value="false" />
		</properties>
	</persistence-unit>
	
	<persistence-unit name="PU_db2" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <non-jta-data-source>java:comp/env/jdbc/db2</non-jta-data-source>   
        <properties>
        	<!-- Configuring JDBC properties -->
        	<!-- 
        	Not supported by BasicDataSource
        	<property name="hibernate.connection.datasource" value="java:comp/env/jdbc/db2" /> 
        	       	
        	
      		<property name="javax.persistence.jdbc.user" value="SGAV026"/>
      		<property name="javax.persistence.jdbc.password" value="bitchs39"/>
        --> 
        	<!-- Hibernate properties -->
            <property name="hibernate.id.new_generator_mappings" value="true" />
            <property name="hibernate.archive.autodetection" value="class" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.DB2Dialect" />
            <property name="connection.autocommit" value="false" />             
        </properties>
    </persistence-unit>
	

</persistence>