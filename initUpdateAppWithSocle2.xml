<project name="test" default="update" basedir=".">
	<description>
		Création d'un nouveau projet maven en utilisant le socle 2
	</description>

	<condition property="lecteur" value="c:">
		<contains string="${user.name}" substring="legloahec" casesensitive="false" />
	</condition>
	<property name="lecteur" value="d:" />
	<condition property="user" value="Users">
		<contains string="${user.name}" substring="legloahec" casesensitive="false" />
	</condition>
	<property name="user" value="Utilisateurs" />
	
	<property name="source" location="${lecteur}\${user}/${user.name}/Desktop/appSocle" />
	
	<property name="source.src.main" location="${lecteur}/${user}/${user.name}/Desktop/appSocle/src/main" />
	<property name="dest.src.main" location="src/main" />
	
	<property name="source.java" location="${source.src.main}\java/com/avancial" />
	<property name="dest.java" location="${dest.src.main}/java/com/avancial" />
	
	<property name="source.java.app" location="${source.java}/app/" />
	<property name="dest.java.app" location="${dest.java}/app/" />
	
	<property name="source.java.socle" location="${source.java}/socle/" />
	<property name="dest.java.socle" location="${dest.java}/socle/" />
	
	<property name="source.test.src" location="${source}/src/test" />
	<property name="dest.test.src" location="src/test" />
	
	<property name="source.test.src.java" location="${source.test.src}/java" />
	<property name="dest.test.src.java" location="${dest.test.src}/java" />
	
	<property name="source.test.src.resources" location="${source.test.src}/resources" />
	<property name="dest.test.src.resources" location="${dest.test.src}/resources" />
	
	<property name="source.resources" location="${source.src.main}\resources/" />
	<property name="dest.resources" location="${dest.src.main}/resources/" />
	
	<property name="source.webapp" location="${source.src.main}\webapp/" />
	<property name="dest.webapp" location="${dest.src.main}/webapp/" />
	
	<property name="source.appClient" location="${source.webapp}/appClient/" />
	<property name="dest.appClient" location="${dest.webapp}/appClient/" />
	
	<property name="source.webapp.webinf" location="${source.webapp}/WEB-INF" />
	<property name="dest.webapp.webinf" location="${dest.webapp}/WEB-INF/" />

	<property name="source.webapp.metainf" location="${source.webapp}/META-INF" />
	<property name="dest.webapp.metainf" location="${dest.webapp}/META-INF/" />
	
	<property name="source.otherResources" location="${source.webapp}/resources" />
	<property name="dest.otherResources" location="${dest.webapp}/resources" />	
		
	<property name="source.pages" location="${source.webapp}/pages" />
	<property name="dest.pages" location="${dest.webapp}/pages" />
	
	<property name="source.index.jsp" location="${source.webapp}/index.jsp" />
	<property name="source.quartz.properties" location="${source.webapp}/quartz.properties" />	
	
	<property name="source.pom.xml" location="${source}/pom.xml" />
		
	<property name="source.othersRessources" location="${source}/Other Resources" />
	<property name="dest.othersRessources" location="Other Resources" />
	
	<target name="commun">
	</target>
	
	<target name="update">
			
	</target>
	
	<target name="init">

		<echo>init du projet</echo>

		<echo>Copie des sources</echo>
		<copy todir="${dest.java}" verbose="true" overwrite="true">
			<fileset dir="${source.java}">
			</fileset>
		</copy>

		<antcall target="commun"></antcall>				

		<echo>Copie du répertoire WEB-INF</echo>
		<copy todir="${dest.webapp.webinf}" verbose="true" overwrite="true">
			<fileset dir="${source.webapp.webinf}" />
		</copy>

		<!--<echo>Creation du r?pertoire Other Ressources</echo>
		<mkdir dir="${dest.otherResources}" />-->

		<echo>Copie du répertoire META-INF</echo>
		<copy todir="${dest.webapp.metainf}" verbose="true" overwrite="true">
			<fileset dir="${source.webapp.metainf}" />
		</copy>
		
		<echo>Copie du répertoire APPClient</echo>
		<copy todir="${dest.appClient}" verbose="true" overwrite="true">
			<fileset dir="${source.appClient}" />
		</copy>
		
		
		<echo>Copie du répertoire Pages</echo>
		<copy todir="${dest.pages}" verbose="true" overwrite="true">
			<fileset dir="${source.pages}" />
		</copy>
		
		<echo>Copie des other Ressource</echo>
		<copy todir="${dest.otherResources}" verbose="true" overwrite="true">
			<fileset dir="${source.otherResources}" />
		</copy>

		<echo>Copie des resources</echo>
		<copy todir="${dest.resources}" verbose="true" overwrite="true">
			<fileset dir="${source.resources}">			
			</fileset>
		</copy>
		
		<echo>Copie des src tests</echo>
		<copy todir="${dest.test.src.java}" verbose="true" overwrite="true">
			<fileset dir="${source.test.src.java}">			
			</fileset>
		</copy>
		
		<echo>Copie des resources des tests</echo>
		<copy todir="${dest.test.src.resources}" verbose="true" overwrite="true">
			<fileset dir="${source.test.src.resources}">			
			</fileset>
		</copy>
		
		<echo>Copie des resources des othersRessource</echo>
		<copy todir="${dest.othersRessources}" verbose="true" overwrite="true">
			<fileset dir="${source.othersRessources}">			
			</fileset>
		</copy>
		<echo>Copie index.jsp</echo>
		<copy todir="${dest.webapp}" verbose="true" overwrite="true">
			<fileset file="${source.index.jsp}">			
			</fileset>
		</copy>
		
		<echo>Copie quartz.properties</echo>
		<copy todir="${dest.webapp}" verbose="true" overwrite="true">
			<fileset file="${source.quartz.properties}">			
			</fileset>
		</copy>
		
		<echo>Copie pom.xml</echo>
		<copy todir="." verbose="true" overwrite="true">
			<fileset file="${source.pom.xml}">			
			</fileset>
		</copy>

		
		<echo>Fin d'inialisation du projet</echo>
	</target>
</project>